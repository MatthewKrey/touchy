<% if user_signed_in? %>
  <div class="jumbotron center">
    <div class="container-fluid">
      <div class="col-xs-12 centerfy">
        <img style="max-width:220px;" src = <%= asset_path('vertical_2.png') %> class="img-responsive">
      </div>
    </div>
  </div>
  <%= render '/layouts/footer' %>
<% else %>
  <div class="jumbotron center">
    <div class="container">
      <div class="col-md-6 col-md-offset-3 centerfy">
        <img src= <%=asset_path('Touchy_2.png') %> class="img-circle" alt="Touchy" width="150" height="150">
      </div>
      <h1>TOUCHY</h1>
      <h3>GET IN TOUCH WITH YOUR BODY</h3>
      <%= link_to "Log in", new_user_session_path, class: "btn btn-default btn-lg" %>
      <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary btn-lg" %>
    </div>
  </div>
<% end %>
