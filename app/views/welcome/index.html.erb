<% if user_signed_in? %>
  <div class="jumbotron center">
    <div class="container">
      <h2>Hey, it's Touchy</h2>
      <h3>Here's your gif of the day! :)</h3>
      <div class="embed-responsive embed-responsive-4by3">
        <iframe class="embed-responsive-item" src="https://media.giphy.com/media/DgaabECbM9gc0/giphy.gif" align="center"></iframe>
      </div>
    </div>
  </div>
  <%= render '/layouts/footer' %>
<% else %>
  <div class="jumbotron center">
    <div class="container">
      <h1>Touchy</h1>
      <h3>Everyone Has A Story.</h3>
      <%= link_to "Log in", new_user_session_path, class: "btn btn-default btn-lg" %>
      <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary btn-lg" %>
    </div>
  </div>
<% end %>
